<?xml version="1.0" encoding="UTF-8"?>

<?import com.yijingoracle.iching.core.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.co/fxml" alignment="CENTER" minHeight="400" spacing="30"
      fx:controller="com.yijingoracle.iching.app.controller.Decomposition">

    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <HBox alignment="CENTER">
        <VBox spacing="15" alignment="CENTER" minWidth="200">
            <Label fx:id="_hexagramTitle" styleClass="hexagram-label"/>
            <VBox alignment="CENTER" styleClass="hexagram" minWidth="200" maxWidth="200">
                <HexagramRegion fx:id="_hexagram"/>
            </VBox>
        </VBox>
    </HBox>

    <HBox spacing="15" alignment="CENTER">
        <VBox alignment="CENTER">
            <Label text="%ut" styleClass="trigram-label"/>
            <VBox styleClass="trigram">
                <TrigramRegion fx:id="_ut"/>
            </VBox>
        </VBox>

        <VBox alignment="CENTER">
            <Label text="%uct" styleClass="trigram-label"/>
            <VBox styleClass="trigram">
                <TrigramRegion fx:id="_uct"/>
            </VBox>
        </VBox>

        <VBox alignment="CENTER">
            <Label text="%lct" styleClass="trigram-label"/>
            <VBox styleClass="trigram">
                <TrigramRegion fx:id="_lct"/>
            </VBox>
        </VBox>

        <VBox alignment="CENTER">
            <Label text="%lt" styleClass="trigram-label"/>
            <VBox styleClass="trigram">
                <TrigramRegion fx:id="_lt"/>
            </VBox>
        </VBox>
    </HBox>
</VBox>

